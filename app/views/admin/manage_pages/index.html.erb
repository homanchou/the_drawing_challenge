<p id="notice"><%= notice %></p>

<h1>Listing Admin Pages</h1>

<%= link_to 'New Page', new_admin_manage_page_path, class:'btn btn-info' %>

<table class="table">
  <thead>
    <tr>
      <th>Slug (permalink)</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.slug %></td>
        <td><%= page.title %></td>
        <td><%= page.body %></td>
        <td><%= link_to 'Edit', edit_admin_manage_page_path(page) %></td>
        <td><%= link_to 'Destroy', admin_manage_page_path(page), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @pages %>

